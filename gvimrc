" Use Solarized colors.
set bg=light
colorscheme solarized

" Use Consolas.
set gfn=Consolas\ 13

" Highlight the current line.
set cursorline

" Remove the menubar.
set guioptions-=m

" Remove the toolbar.
set guioptions-=T

" Remove the right scrollbar.
set guioptions-=r

" Use console dialogs instead of popups.
set guioptions+=c

" Draw tabs as the console version does.
set guioptions-=e

